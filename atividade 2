#include <stdio.h>

int main() {
	int i;
	int j;
    int M[2][3];
    int product = 1;

    // Alimenta a matriz com elementos inteiros
    printf("Digite os elementos da matriz 2x3:\n");
    for (i = 0; i < 2; i++) {
        for (j = 0; j < 3; j++) {
            printf("Elemento [%d][%d]: ", i, j);
            scanf("%d", &M[i][j]);
            product *= M[i][j];
        }
    }

    // Apresenta o produto de todos os elementos da matriz
    printf("O produto de todos os elementos da matriz Ã©: %d\n", product);

    return 0;
}
